<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/general_view"
    >

    <!--Layout for ImageView-->
    <LinearLayout
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/black"
        android:padding="1dp"
        android:layout_margin="1dp"
        >

        <TextView
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text for image."
            android:background="@color/white"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="1072px"
            android:layout_height="603px"
            android:scaleType="centerCrop"
            android:layout_below="@+id/image_title"
            />


    </LinearLayout>

    <!--Layout for VideoView-->
    <RelativeLayout
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/black"
        android:padding="1dp"
        android:layout_margin="1dp"
        >

        <TextView
            android:id="@+id/video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text for video."
            android:background="@color/white"
            android:textStyle="bold"/>
        <VideoView
            android:id="@+id/video_View"
            android:layout_width="1072dp"
            android:layout_height="603dp"
            android:layout_below="@+id/video_title"
            />


    </RelativeLayout>

    <!--Layout for Notes-->
    <RelativeLayout
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/black"
        android:padding="1dp"
        android:layout_margin="1dp"
        >
        <TextView
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/note_text"
            android:layout_width="1072dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@+id/note_title"
            android:editable="true" />

    </RelativeLayout>

    <!--Layout for AudioPlayer-->
    <RelativeLayout
        android:id="@+id/audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/black"
        android:padding="1dp"
        android:layout_margin="1dp"
        >

        <TextView
            android:id="@+id/audio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text for Audio."
            android:background="@color/white"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/audio_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/audio_title"
            android:background="@drawable/play"
            android:layout_alignParentStart="true" />
        <SeekBar
            android:id="@+id/audio_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/audio_button"
            android:layout_toEndOf="@+id/audio_button"
            android:layout_alignTop="@+id/audio_button"
            android:background="@color/white"/>

    </RelativeLayout>

</RelativeLayout>